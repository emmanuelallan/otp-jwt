<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">Sign In</h3>
        </div>
        <div class="card-body">
          <%= form_with url: sessions_path, method: :post, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :otp, "One-Time Password", class: 'form-label' %>
              <%= f.text_field :otp, class: 'form-control', required: true %>
            </div>

            <div class="d-grid">
              <%= f.submit "Sign In", class: 'btn btn-primary' %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <small>
              Didn't receive the code? <%= link_to "Resend", sessions_path, method: :post, class: 'text-decoration-none' %>
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
